@model ProyectoTalleres.Models.Inscripcion

<h2>Nueva Inscripción</h2>

<form asp-action="Crear" method="post" class="card p-4">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label>Nombre</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Apellidos</label>
        <input asp-for="Apellidos" class="form-control" />
        <span asp-validation-for="Apellidos" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Correo</label>
        <input asp-for="Correo" class="form-control" />
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Teléfono</label>
        <input asp-for="Telefono" class="form-control" />
        <span asp-validation-for="Telefono" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Taller</label>
        <select asp-for="Taller" class="form-control">
            <option value="">Seleccione un taller...</option>
            <option>C#</option>
            <option>Python</option>
            <option>Web</option>
            <option>Bases de Datos</option>
            <option>Otro</option>
        </select>
        <span asp-validation-for="Taller" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Nivel de Experiencia</label>
        <select asp-for="NivelExperiencia" class="form-control">
            <option value="">Seleccione...</option>
            <option>Principiante</option>
            <option>Intermedio</option>
            <option>Avanzado</option>
        </select>
        <span asp-validation-for="NivelExperiencia" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Fecha del Taller</label>
        <input asp-for="FechaTaller" type="date" class="form-control" />
        <span asp-validation-for="FechaTaller" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="AceptaTerminos" class="form-check-input" />
        <label>Acepto los términos y condiciones</label>
        <span asp-validation-for="AceptaTerminos" class="text-danger"></span>
    </div>

    <button class="btn btn-success">Registrar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}